#!/source/this/sh

__lbin_add    () {
    borg.assert.insitu || return
    cp ${1} ${MYBORG_LBIN}
}

__lbin_load () {
    borg.assert.insitu || return
    [ "$1" = "" ] && echo "[__lbin_load()]: missing arg"
    for path in $(borg.ls.fullpath $1); do
        __lbin_add $path
    done
}
__lbin_default () {
    borg.assert.insitu|| return
    __lbin_load $(borg.insitu.path)/lbin
}
