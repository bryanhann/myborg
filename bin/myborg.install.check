#!/bin/sh

check () {
    cmd=$1
    shift
    line=$*
    path=$(which $cmd)
    [ "${path}" = "" ] && {
        echo "# [$cmd] is missing."
        echo $line
    } || {
        echo "# [$cmd] found at [$path]."
    }
}
check nmap      sudo install nmap
check pipx      sudo apt install pipx
check poetry    pipx install poetry

